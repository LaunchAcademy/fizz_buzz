<div class="br-pattern-bg "></div>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h1>Brewdex</h1>
<!--       <%= image_tag 'beer_2.png', class: "brewdex-header-img" %>
 -->    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
    <div class="form-wrapper">
      <% if @breweries.empty? %>
        <p>Your search returned no results.</p>
      <% else %>
        <div id="breweries-list">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>Brewery Name</th>
                <th>Location</th>
              </tr>
            </thead>
            <tbody>
              <% @breweries.each do |brewery| %>
                <tr>
                  <td><%= link_to brewery.name, brewery_path(brewery) %></td>
                  <td><%= brewery.city %></td>
                </tr>
              <% end %>
          </tbody>
        </table>
        </div>
        <%= paginate @breweries %>
      <% end %>
    </div>
    </div>
  </div>
</div>




