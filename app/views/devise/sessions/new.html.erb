 <form class="form-horizontal" role="form">
  <div class="form-group">
    <h2 >Sign in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "col-sm-2 control-label", :id => "inputPassword3"}) do |f| %>
    <div class="col-sm-10">

    </div>
  </div>



    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
    </div>

  <div class="form-group">
    <%= f.label :email, :html => {:class => "col-sm-2 control-label" }%><br>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, :html => {:class => "form-control" :id => "inputPassword3" %>
    </div>
  </div>




  <div class="form-group">
    <div class="col-sm-10">
    <%= f.label :password, :html => {:class => "col-sm-2 control-label", :id => "inputPassword3"} %><br />
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    <% end -%>
    </div>
  </div>
  <%= f.submit "Sign in" %>

  <% end %>
</div>
</form>


