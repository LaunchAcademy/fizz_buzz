
<%= form_for [@brewery, @review] do |f| %>

 <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <br>
  <strong>User Rating</strong><br>
  <% (1..5).each do |i| %>
    <%= f.radio_button(:rating, i) %>
    <%= f.label(:rating_star, "#{i} Stars") %>
  <% end %>
  <br>

  <%= f.label :title, class: "control-label"  %><br>
  <%= f.text_field :title%>
  <br>
  <%= f.label :body, class: "control-label"  %><br>
  <%= f.text_area :body, class: "form-control"  %><br>

  <%= f.submit 'Submit', class: "btn btn-default" %>
<% end %>
