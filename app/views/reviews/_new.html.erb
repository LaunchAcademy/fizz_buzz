
<%= form_for [@brewery, @review] do |f| %>

 <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title%><br>

  <%= f.label :body %><br>
  <%= f.text_area :body %><br>


  <strong>Rating</strong><br>
  <% (1..5).each do |i| %>
    <%= f.radio_button(:rating, i) %>
    <%= f.label(:rating_star, "#{i} Star") %>
  <% end %>
  <br>
  <%= f.submit 'Submit' %>

<% end %>


