
<%= form_for [@brewery, @review] do |f| %>

 <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title%>

  <br><%= f.label :body %><br>
  <%= f.text_area :body %><br>

  <% i = 1 %>
  <strong>Rating</strong><br>
  <% 5.times do %>
    <%= f.radio_button(:rating, i) %>
    <%= f.label(:rating_star, "#{i} Star") %>
    <% i += 1 %>
    <% end %>
  <br><%= f.submit 'Submit' %>

<% end %>


